{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@env": [
        "./node_modules/react-native-dotenv"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./global.d.ts"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
    "src/types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
